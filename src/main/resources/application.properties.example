spring.application.name=barbersync-api
spring.profiles.active=dev


# Direcci√≥n de tu base de datos en AWS
spring.datasource.url=jdbc:mysql://localhost:3307/bdbarbersync?allowPublicKeyRetrieval=true&useSSL=false&serverTimezone=UTC
spring.datasource.username=api_user
spring.datasource.password=password

# Hikari (ya viene por defecto)
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.datasource.hikari.maximum-pool-size=10

# JPA
spring.jpa.hibernate.ddl-auto=none
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

# Puerto del servidor
server.port=8080
